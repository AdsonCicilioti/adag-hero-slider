{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "adag/hero-slider",
	"version": "0.1.0",
	"title": "Hero Slider",
	"category": "theme",
	"icon": "superhero",
	"keywords": [
		"slide",
		"carousel",
		"slider",
		"slideshow"
	],
	"description": "A great slideshow block with hero slides.",
	"supports": {
		"align": [
			"center",
			"full",
			"wide",
			"left",
			"right"
		],
		"html": false
	},
	"attributes": {
		"type": {
			"type": "string",
			"enum": [
				"loop",
				"fade",
				"slide"
			],
			"default": "slide"
		},
		"perPage": {
			"type": "number"
		},
		"rewind": {
			"type": "boolean",
			"default": true
		},
		"speed": {
			"type": "number",
			"default": 400
		},
		"rewindSpeed": {
			"type": "number",
			"default": 400
		},
		"perMove": {
			"type": "number"
		},
		"arrows": {
			"type": "boolean",
			"default": true
		},
		"pagination": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"interval": {
			"type": "number",
			"default": 5000
		},
		"pauseOnHover": {
			"type": "boolean",
			"default": true
		},
		"gap": {
			"type": "string"
		},
		"padding": {
			"type": "string"
		},
		"drag": {
			"type": "boolean",
			"default": true
		},
		"breakpoints": {
			"type": "object",
			"default": {
				"640": {
					"perPage": 1,
					"perMove": 1,
					"destroy": false,
					"gap": 0,
					"padding": 0
				}
			}
		}
	},
	"textdomain": "hero-slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
